.cyui-input-row
    background #fff
    display flex
    padding 10px
    flex-direction row
.cyui-input-label
    color #333
    font-size 14px
.cyui-input-input
    padding 0 10px
    flex 1
    font-size 14px
    color #ccc
    overflow hidden
    white-space nowrap
    text-overflow ellipsis
    &.on
        color #333
        font-weight bold

.cyui-input-dialog
    background rgba(0, 0, 0, 0.5)
    position fixed
    left 0
    top 0
    z-index 200
    width 100%
    height 100%
    display none
    &.on
        display block
.cyui-input-box
    width 100%
    background #fff
    position absolute
    left 0
    bottom 0
    border-radius 12px 12px 0 0
    transform translateY(100%)
    transition all 0.5s
    &.on
        transform translateY(0%)
.cyui-input-title
    text-align center
    color #333
    font-size 16px
    font-weight normal
    padding 10px 0
    border-bottom 1px solid #eee
.cyui-input-close
    font-size 30px
    color #999
    position absolute
    right 10px
    top 6px
    line-height 1
.cyui-input-card
    width 100%
    overflow hidden
.cyui-input-ul-box
    display block
    width 400%
    transform translateX(0%)
    transition all 0.2s
.cyui-input-ul
    padding 0 20px
    height 360px
    width 25%
    overflow-y auto
    float left
    box-sizing border-box
    li
        height 36px
        line-height 36px
        font-size 14px
        &.on
            color red
.cyui-input-select
    display flex
    font-size 14px
    padding 5px 10px
    color #333
    font-weight bold
    border-bottom 1px solid #eee
    flex-wrap wrap
.cyui-input-sel-btn
    margin-right 20px
    &.on
        color red