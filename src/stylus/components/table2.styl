.cyui-table-container
    overflow auto
    position relative
    width 100%

    &[data-border]
        .td, .th
            border-bottom 0.8px solid #eee
            border-left 0.8px solid #eee

        .tr
            .td:last-child, .th:last-child
                border-right 0.8px solid #eee

        .tr:first-child
            .th, .td
                border-top 0.8px solid #eee

        &[data-fixcol]
            .td, .th
                border-left none
                border-right 0.8px solid #eee

            .tr
                .td:first-child, .th:first-child
                    border-left 0.8px solid #eee

    &[data-stripe]
        .tr:nth-child(2n)
            .td, .th
                background-color #f5f5f5

        .tr:first-child
            .td, .th
                background-color #fff

    &[data-line-x]
        .tr
            .td, .th
                border-bottom 0.8px solid #eee

    &[data-line-y]
        .tr
            .td, .th
                border-left 0.8px solid #eee

            .td:first-child, .th:first-child
                border none

    &[data-fixhead]
        .th
            left 0
            position sticky
            top 0
            z-index 1

    &[data-fixcol]
        .td:first-child
            left 0
            position sticky
            z-index 2

        .th:first-child
            left 0
            position sticky
            z-index 3

        .td[data-fixcol-item], .th[data-fixcol-item]
            position sticky
            z-index 2

    &[data-merge-row]
        .th[data-empty]:not(:first-child), .td[data-empty]:not(:first-child)
            border-left none

        .td[data-empty]:empty+.td:not(:empty)
            border-left 0.8px solid #eee

        [data-merge-item]
            border-right 0
            left 0
            padding-right 10px
            position absolute
            text-align right

    &[data-merge-col]
        .th[data-empty]:not(:first-child), .td[data-empty]:not(:first-child)
            border-bottom none

        [data-merge-item]
            margin auto
            margin-left -10px
            margin-top -10px
            padding 10px
            position absolute

        .tr:last-child
            .td[data-empty]
                border-bottom 0.8px solid #eee

    .cyui-table
        display table
        position relative
        width 100%

        .tr
            display table-row

        .td, .th
            background-color #fff
            display table-cell
            padding 10px
            word-break break-all