.drop-item-title 
    flex: 1;
    text-align: center;

.drop-box
    display: flex;
    // box-shadow: 0 0 2px 2px #eee
    cursor pointer;
    background-color: #fff !important;

.drop-item
    display: flex;
    justify-content: center;
    align-items: center; 
    flex: 1;
    line-height: 24px
    padding: 10px;
    font-size: 16px;
    color: #333;
    background: url('../../img/top.png') no-repeat right center/24px;


.drop-list
    overflow-y: auto;
    position: absolute;
    left: 0;
    top: 46px;
    visibility hidden;
    width: 100%;
    max-height: 171px;
    padding: 0 16px;
    background-color: #f5f5f5;

.drop-list-item
    line-height: 22px;
    padding: 10px 0;
    border-bottom: 1px solid #eee;
    font-size: 14px;
    color: #333;
    cursor: pointer;
.drop-list-item:last-child
    border-bottom: none;

.show {
    visibility: visible;
}

.active {
    color: red;
}

.swit-icon {
    background: url('../../img/bottom.png') no-repeat right center/24px;
}

.mask {
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    background-color: rgba(0,0,0,.5);
    // transform: translateX(-50%);
}

