.ui-drawer, .ui-drawer-close
    bottom 0
    left 0
    margin auto
    position fixed
    right 0
    top 0

.ui-drawer
    visibility hidden

    .ui-drawer-close
        opacity 0
        transition all 0.5s

    .ui-drawer-content
        transform translateX(100%)
        transition all 0.5s

.ui-drawer-open
    visibility visible

    .ui-drawer-close
        opacity 1

    .ui-drawer-content
        transform translateX(0)

.ui-drawer-close
    background-color rgba(0, 0, 0, 0.6)

.ui-drawer-content
    background-color #fff
    height 100%
    margin-left auto
    position relative
    width 60%
    z-index 2