@import '_/_common'
@import '_/_reset'
@import 'components/common'

body
    margin auto
    max-width 750px

pre[class*='language-']
    background-color rgba(253, 246, 227, 0.4)
    font-size 13px
    margin 0

pre[class*='language-']::-moz-selection, pre[class*='language-'] ::-moz-selection, code[class*='language-']::-moz-selection, code[class*='language-'] ::-moz-selection
    background #8fddff

pre[class*='language-']::selection, pre[class*='language-'] ::selection, code[class*='language-']::selection, code[class*='language-'] ::selection
    background #8fddff

.demo
    padding 20px

    .demo-item
        border 0.5px solid rgb(3, 169, 243)
        border-radius 0 0 3px
        font-size 14px
        margin-bottom 20px
        padding 10px

    .demo-title, .demo-code-title
        background-color rgb(3, 169, 243)
        border-radius 3px 3px 0 0
        color #fff
        font-size 14px
        padding 10px

    .demo-code-title
        // background-color #74b582
        background-color #fdf6e3
        border-bottom 0.8px solid #eee
        color #74b582
        margin-top 10px

    .demo-title-sub
        background-color rgb(3, 169, 243)
        border-radius 3px 3px 0 0
        color #fff
        font-size 12px
        padding 5px 10px
        padding-top 0

    .demo-table
        line-height 1.5

.wrapper
    bottom 0
    display flex
    flex-direction column
    left 0
    margin auto
    position fixed
    right 0
    top 0

.txt
    color #333
    font-size 15px

.cyui-input-row
    background #fff
    display flex
    flex-direction row
    padding 10px

.cyui-input-label
    color #333
    font-size 14px

.cyui-input-input
    color #ccc
    flex 1
    font-size 14px
    overflow hidden
    padding 0 10px
    text-overflow ellipsis
    white-space nowrap

    &.on
        color #333
        font-weight bold