extends ../_tpl/_base.pug

block css
    +css(['../css/base', '../css/components/form'])
block js
    +js(['../js/components/form'])

block cc
    
    .demo
        .demo-title 表单样式一
        .demo-item
            #verfiyForm.ui-form.ui-form-line
                .ui-form-item
                    .ui-input-content
                        .ui-label
                            label(for='#') 必填但不验证
                        .ui-input-box
                            .ui-input-in    
                                input(type='text', placeholder='请输入手机号', data-required)
                
                .ui-form-item
                    .ui-input-content
                        .ui-label
                            label(for='#') 验证但不必填
                        .ui-input-box
                            .ui-input-in    
                                input(type='text', placeholder='请输入手机号', data-verify='phone')

                .ui-form-item
                    .ui-input-content
                        .ui-label
                            label(for='#') 必填且验证
                        .ui-input-box
                            .ui-input-in    
                                input(type='text', placeholder='请输入手机号', data-verify='phone', data-required)
        
        
        .demo-title 表单样式二
        .demo-item
            #verfiyForm2.ui-form.ui-form-shadow
                .ui-form-item
                    .ui-input-content
                        .ui-label
                            label(for='#') 必填但不验证
                        .ui-input-box
                            .ui-input-in    
                                input(type='text', placeholder='请输入手机号', data-required)
                
                .ui-form-item
                    .ui-input-content
                        .ui-label
                            label(for='#') 验证但不必填
                        .ui-input-box
                            .ui-input-in    
                                input(type='text', placeholder='请输入手机号', data-verify='phone')

                .ui-form-item
                    .ui-input-content
                        .ui-label
                            label(for='#') 必填且验证
                        .ui-input-box
                            .ui-input-in    
                                input(type='text', placeholder='请输入手机号', data-verify='phone', data-required)

        - var code = "var v = new cyui.Form({\n    dom: '#verfiyForm',\n    tipSkin: 1, // 表单样式，默认\n    trigger: 'input', // 校验方式，默认\n})\n\nvar v2 = new cyui.Form({\n    dom: '#verfiyForm2',\n    tipSkin: 2, // 表单样式\n    trigger: 'blur', // 校验方式\n})"
        .demo-title 使用方法
        .demo-code
            .hl
                pre
                    code(class='language-js') #{code}
                
    script.
        var v = new cyui.Form({
            dom: '#verfiyForm',
            tipSkin: 1, // 表单样式
            trigger: 'input', // 校验方式，实时
        })
        var v2 = new cyui.Form({
            dom: '#verfiyForm2',
            tipSkin: 2, // 表单样式
            trigger: 'input', // 校验方式，实时
        })
